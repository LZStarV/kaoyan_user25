@charset "UTF-8";
page {
  background-color: #fcfaf6;
}

.header {
  height: 160rpx;
  background-image: linear-gradient(to bottom, #fddb92 0%, #fffef9 100%);
  padding: 30rpx 20rpx 15rpx;
}

.header .search {
  background-color: white;
  flex: 2;
  border-radius: 40rpx;
  padding-right: 40rpx;
}

.header .search image {
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx 20rpx;
  vertical-align: middle;
}

.header .search input {
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 88rpx);
}

.middle {
  padding-top: 5rpx;
}

.middle .exam-block {
  margin: 12rpx 10rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #eeeeee;
  position: relative;
}

.middle .exam-block .exam-title {
  font-size: 30rpx;
  font-weight: bolder;
  padding: 20rpx 15rpx;
}

.middle .exam-block .tag {
  position: absolute;
  bottom: 15rpx;
  padding: 0rpx 15rpx;
  justify-content: space-between;
  align-items: center;
  display: flex;
  width: 96%;
}

.middle .exam-block .tag .category {
  display: flex;
  align-items: center;
  height: 50rpx;
  justify-content: space-evenly;
  border-radius: 10rpx;
}

.middle .exam-block .tag .category image {
  width: 30rpx;
  height: 30rpx;
}

.middle .exam-block .tag .categoryName {
  font-size: 24rpx;
  margin: 0 10rpx;
}

.middle .exam-block .tag .download {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #b5b5b5;
}

.middle .exam-block .tag .download image {
  width: 40rpx;
  height: 40rpx;
}

.middle .exam-block .tag .downLoadNum {
  margin-left: 12rpx;
}

.temp {
  position: absolute;
  top: 100rpx;
  z-index: 4;
  background: #fff;
  font-size: 28rpx;
  color: #666;
}

.subject_choice {
  width: 100%;
  max-height: 450rpx;
  overflow-y: scroll;
  line-height: 100rpx;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
}

.subject_choice .select {
  margin: auto;
  width: 94%;
  display: flex;
  justify-content: space-between;
}

.subject_choice .selected {
  color: #ff7a22;
}

.slidown {
  display: block;
  position: absolute;
}

.slidup {
  display: none;
}

/* 下拉筛选框 */
.line-nav-fixed {
  position: absolute;
  /* 或 fixed */
  width: 100%;
  top: 0rpx;
  left: 0rpx;
  background: #ffebc1;
  z-index: 4;
}

.line-nav {
  position: absolute;
  /* 或 fixed */
  top: 100rpx;
  /* 根据需要调整 */
  width: 100%;
}

.nav {
  display: flex;
  z-index: 2;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}

.nav-son.active .content {
  color: #ff7a22;
}

/*箭头左边的内容*/
.content {
  display: inline-block;
  font-size: 28rpx;
  color: #1b1b1a;
  margin-right: 80rpx;
}

/*向下的箭头*/
.icon {
  display: inline-block;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

/*遮罩*/
.fullbg {
  position: fixed;
  top: 0rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: #010101;
  transition: all 2s;
  opacity: 0.5;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 30px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.quote-section {
  text-align: center;
  margin-bottom: 30px;
}

.quote {
  font-size: 18px;
  color: #333;
  margin-bottom: 10px;
}

.author {
  font-size: 16px;
  color: #666;
}

.buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

button {
  padding: 10px 20px;
  font-size: 16px;
  color: white;
  border: none;
  border-radius: 5px;
}

.random-button {
  background-color: #4caf50;
}

.share-button {
  background-color: #2196f3;
}
