root = true

# 匹配所有文件
[*]
# 使用 Unix 风格的换行符
end_of_line = crlf
# 文件末尾会插入一个空行
insert_final_newline = true
# 删除行尾的空格
trim_trailing_whitespace = true
# 设置文件编码为 UTF-8
charset = utf-8

# 匹配 JavaScript 文件
[*.js]
# 使用空格缩进
indent_style = space
# 缩进大小为 2
indent_size = 2

# 匹配 Markdown 文件
[*.md]
# 使用制表符缩进
indent_style = tab
