/* pages/resource/resourceDetail/ResourceDetail.wxss */
page {
  background: #f6f6f6;
}

.content {
  height: 600rpx;
  background: #ffffff;
  margin: 30rpx auto;
  width: 90%;
  border-radius: 20rpx;
  padding: 35rpx 20rpx 20rpx 20rpx;
}

.content .title {
  font-weight: bolder;
  font-size: larger;
}

.content .detail {
  color: #53524f;
  line-height: 80rpx;
  font-size: 28rpx;
}

.content .description {
  line-height: 36rpx;
  padding-top: 25rpx;
  padding-bottom: 15rpx;
}

.download {
  margin: 50rpx auto;
  width: 94%;
  height: 90rpx;
  background-color: #ff7214;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.download image {
  width: 60rpx;
  height: 60rpx;
}

.download .tip {
  margin-left: 8rpx;
}

.middle {
  padding-top: 5rpx;
}

.middle .resource-block {
  margin: 12rpx 10rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #eeeeee;
  position: relative;
}

.middle .resource-block .resource-title {
  font-size: 30rpx;
  font-weight: bolder;
  padding: 20rpx 15rpx;
}

.middle .resource-block .tag {
  position: absolute;
  bottom: 15rpx;
  padding: 0rpx 15rpx;
  justify-content: space-between;
  align-items: center;
  display: flex;
  width: 96%;
}

.middle .resource-block .tag .category {
  display: flex;
  align-items: center;
  height: 50rpx;
  width: 110rpx;
  justify-content: space-evenly;
  border-radius: 10rpx;
}

.middle .resource-block .tag .category image {
  width: 30rpx;
  height: 30rpx;
}

.middle .resource-block .tag .categoryName {
  font-size: 24rpx;
}

.middle .resource-block .tag .download {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #b5b5b5;
}

.middle .resource-block .tag .download image {
  width: 40rpx;
  height: 40rpx;
}

.middle .resource-block .tag .downLoadNum {
  margin-left: 12rpx;
}
