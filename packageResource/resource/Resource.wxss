@charset "UTF-8";
page {
  background-color: #fcfaf6;
}

.header {
  height: 100rpx;
  background-image: linear-gradient(to bottom, #e0e6c8 0%, #fffef9 100%);
  padding: 30rpx 20rpx 15rpx;
}

.search {
  background-color: white;
  flex: 2;
  border-radius: 40rpx;
  padding-right: 40rpx;
}

.search image {
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx 20rpx;
  vertical-align: middle;
}

.search input {
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 88rpx);
}

.article-block {
  display: flex;
  height: 220rpx;
  width: 92%;
  margin: auto;
  border-top: 1rpx solid rgba(222, 222, 222, 0.5);
}

.article-block .article {
  flex: 1;
  width: 380rpx;
  color: #5c5b5b;
  padding-top: 10px;
  padding-bottom: 20rpx;
}

.article-block .article .article-title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  color: #474747;
}

.article-block .article .article-text {
  font-size: 25rpx;
  color: #616161;
  padding-bottom: 30rpx;
  height: 30rpx;
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing: 0.5rpx;
}

.article-block .article .article-time {
  padding-top: 30rpx;
  font-size: 22rpx;
  color: darkgrey;
}

.article-block .article-image {
  width: 230rpx;
  height: 180rpx;
}

.middle {
  padding-top: 5rpx;
}

.middle .resource-block {
  margin: 12rpx 10rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #eeeeee;
  position: relative;
}

.middle .resource-block .resource-title {
  font-size: 30rpx;
  font-weight: bolder;
  padding: 20rpx 15rpx;
}

.middle .resource-block .tag {
  position: absolute;
  bottom: 15rpx;
  padding: 0rpx 15rpx;
  justify-content: space-between;
  align-items: center;
  display: flex;
  width: 96%;
}

.middle .resource-block .tag .category {
  display: flex;
  align-items: center;
  height: 50rpx;
  width: 110rpx;
  justify-content: space-evenly;
  border-radius: 10rpx;
}

.middle .resource-block .tag .category image {
  width: 30rpx;
  height: 30rpx;
}

.middle .resource-block .tag .categoryName {
  font-size: 24rpx;
}

.middle .resource-block .tag .download {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #b5b5b5;
}

.middle .resource-block .tag .download image {
  width: 40rpx;
  height: 40rpx;
}

.middle .resource-block .tag .downLoadNum {
  margin-left: 12rpx;
}
